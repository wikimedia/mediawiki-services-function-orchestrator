{
	"root": true,
	"extends": [
		"wikimedia/server"
	],
	"rules": {
		"camelcase": [
			"error",
			{
				"properties": "never"
			}
		],
		"node/no-unsupported-features/node-builtins": [
			"error", {
				"version": ">=12.0.0",
				"ignores": []
			}
		],
		"node/no-restricted-require": [ "error", [
			{
				"name": "node-fetch",
				"message": "Please use the wrapper in lib/fetch.js instead."
			}
		] ],
		"no-shadow": "off",
		"no-underscore-dangle": "off",
		"no-unused-vars": [
			"error",
			{
				"args": "none"
			}
		]
	},
	"overrides": [
		{
			"files": "**/*.json",
			"extends": "wikimedia/json"
		}
	]
}
